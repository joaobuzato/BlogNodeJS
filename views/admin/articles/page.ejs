<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>
<body>
    <div class="container">
          <hr>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler Artigo</a>
                </div>
                <br>
            </div>

        <% }) %>
        <hr>
        <div class="row">
            
            <div class="col col-12">
                <% if(result.page == 2) { %>
                    <a class="btn btn-primary" style="float:left" href="/">Anterior</a>
                <% } else { %>
                    <a class="btn btn-primary" style="float:left" href="/articles/page/<%= result.page-1 %>">Anterior</a>
                <% } %>
                <% if(result.next) { %>
                    <a class="btn btn-primary" style="float:right" href="/articles/page/<%= result.page+1 %>">Pr√≥xima</a>
                <% } %>
            </div>
        </div>
    </div>
</body>

