<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Editar Artigo</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/articles/update">
                <input type="hidden" name="id" value="<%= article.id %>">
                <input class="form-control" type="text" name="title" placeholder="TÃ­tulo do Artigo" value="<%= article.title %>">
                <br>
                <input disabled type="text" class="form-control" value="autor: <%= article.creator %>">
                <textarea class="form-control" placeholder="Escreva o artigo" name="body" id="article" ><%- article.body %></textarea>
                <br>
                <label>Categoria</label>
                <select name="category" class="form-control" >
                    <% categories.forEach((category) => {  %>
                        <% if(category.id == article.categoryId) { %>
                            <option value="<%= category.id %>" selected><%= category.title %></option>
                        <% } else { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% } %> 
                    <% }) %>
                </select>
                <br>
                <button class="btn btn-success">Editar</button>
            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>
</div>
</div>

