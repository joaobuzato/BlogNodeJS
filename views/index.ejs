<%- include ('partials/header.ejs') %>
<%- include ('partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem Vindo!</h1>
            <p class="lead">Este é um blog de estudo de Node JS</p>
            <hr class="my-4">
            <p>Este blog usa Node, EJS, e Bootstrap</p>
          </div>
          <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler Artigo</a>
                </div>
                <br>
            </div>

        <% }) %>
        <hr>
        <div class="row">
            <div class="col col-12">
                <a class="btn btn-primary" style="float:right" href="/articles/page/2">Próxima</a>
            </div>
        </div>
    </div>
</body>

